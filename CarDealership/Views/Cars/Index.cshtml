@using CarDealership.Models;

<h1>List Your Car for Sale Here!</h1>
<ul>
  @if (Model.Count == 0)
  {
    <p>There are currently no cars for sale!</p>
  }
  @if(Model.Count != 0)
  {
    @foreach (Car car in Model)
    {
      <li>@car.GetDescription()</li>
    }
  }


</ul>
<a href="/cars/new">Add a new car to list it.</a>
